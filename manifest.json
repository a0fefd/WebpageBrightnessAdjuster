{
  "manifest_version": 2,
  "name": "a0fefd's Brightness Adjuster",
  "version": "1.0",
  "description": "Changes the brightness of open site.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": ["*://*/*"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "permissions": ["activeTab"]
    }
  ]
}